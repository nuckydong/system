<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gopher.system.dao.mysql.OrderDAO">

	<resultMap id="orderMap" type="com.gopher.system.model.Order">
		<result property="id" column="id" javaType="java.lang.Integer"
			jdbcType="INTEGER" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
		<result property="createUser" column="create_user"
			javaType="java.lang.Integer" jdbcType="INTEGER" />
		<result property="updateUser" column="update_user"
			javaType="java.lang.Integer" jdbcType="INTEGER" />
		<result property="number" column="number"
			javaType="java.lang.String" jdbcType="VARCHAR" />
		<result property="remark" column="remark"
			javaType="java.lang.String" jdbcType="VARCHAR" />
		<result property="customerId" column="customer_id"
			javaType="java.lang.Integer" jdbcType="INTEGER" />
		<result property="send" column="send"
			javaType="java.lang.Integer" jdbcType="INTEGER" />
		<result property="change" column="change"
			javaType="java.lang.Integer" jdbcType="INTEGER" />
	</resultMap>


	<update id="update"
		parameterType="com.gopher.system.model.Order">
		UPDATE `order`
		<set>
			state = #{state},
			update_time = now(),
			remark = #{remark},
			update_user = #{updateUser},
			`change` = #{change},
			send = #{send}
		</set>
		<where>
			state = 0
			<choose>
				<when test="id > 0">
					AND id = #{id}
				</when>
				<when test="number != null and number !=''">
					AND number = #{number}
				</when>
			</choose>
			<if test="customerId > 0">
				AND customer_id = #{customerId}
			</if>
		</where>
	</update>


	<insert id="insert" useGeneratedKeys="true" keyProperty="id"
		parameterType="com.gopher.system.model.Order">
		INSERT INTO `order`
		(number,remark,state,customer_id,create_user,update_user,create_time,update_time,send,`change`)
		VALUES
		(#{number},#{remark},#{state},#{customerId},#{createUser},#{updateUser},now(),now(),#{send},#{change})
	</insert>

	<select id="findOne"
		parameterType="com.gopher.system.model.Order" resultMap="orderMap">
		SELECT * FROM `order`
		<where>
			state = 0
			<choose>
				<when test="id > 0">
					AND id = #{id}
				</when>
				<when test="number != null and number !=''">
					AND number = #{number}
				</when>
			</choose>
		</where>
	</select>

	<select id="findList"
		parameterType="com.gopher.system.model.Order" resultMap="orderMap">
		SELECT * FROM `order`
		<where>
			state = 0
			<if test="createUser >0 ">
				AND create_user = #{createUser}
			</if>
			<if test="customerId >0 ">
				AND customer_id = #{customerId}
			</if>
		</where>
		ORDER BY create_time DESC
	</select>

	<select id="findPage"
		parameterType="com.gopher.system.model.vo.request.OrderPageRequst"
		resultMap="orderMap">
		SELECT * FROM `order`
		<where>
			state = 0
			<if test="customerId > 0 ">
				AND customer_id = #{customerId}
			</if>
			<if test="startTime > 0">
				AND create_time &gt;= #{startTime}
			</if>
			<if test="endTime > 0">
				AND create_time &lt;= #{endTime}
			</if>
			<if test="number != null and number != ''">
				AND number LIKE CONCAT('%',#{number},'%')
			</if>
			<if test="change > 0">
				AND `change` &gt; 0
			</if>
			<if test="change == 0">
				AND `change` = 0
			</if>
			<if test="send > 0">
				AND send &gt; 0
			</if>
			<if test="send == 0">
				AND send = 0
			</if>
		</where>
		ORDER BY create_time DESC
		LIMIT #{beginIndex},#{pageSize}
	</select>

	<select id="count"
		parameterType="com.gopher.system.model.vo.request.OrderPageRequst"
		resultType="java.lang.Integer">
		SELECT COUNT(id) FROM `order`
		<where>
			state = 0
			<if test="customerId > 0 ">
				AND customer_id = #{customerId}
			</if>
			<if test="startTime > 0">
				AND create_time &gt;= #{startTime}
			</if>
			<if test="endTime > 0">
				AND create_time &lt;= #{endTime}
			</if>
			<if test="number != null and number != ''">
				AND number LIKE CONCAT('%',#{number},'%')
			</if>
			<if test="change > 0">
				AND `change` &gt; 0
			</if>
			<if test="change == 0">
				AND `change` = 0
			</if>
			<if test="send > 0">
				AND send &gt; 0
			</if>
			<if test="send == 0">
				AND send = 0
			</if>
		</where>
	</select>

	<update id="delete"
		parameterType="com.gopher.system.model.Order">
		UPDATE `order`
		<set>
			state = -1
		</set>
		<where>
			<choose>
				<when test="id > 0">
					id = #{id}
				</when>
				<when test="customerId > 0">
					customer_id = #{customerId}
				</when>
			</choose>
		</where>
	</update>

</mapper>