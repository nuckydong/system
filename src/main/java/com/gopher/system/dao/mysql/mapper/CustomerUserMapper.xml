<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gopher.system.dao.mysql.CustomerUserDAO">
	<resultMap id="customerUserMap" type="com.gopher.system.model.CustomerUser">
		<result property="id" column="id" javaType="java.lang.Integer"
			jdbcType="INTEGER" />
		<result property="userId" column="user_id" javaType="java.lang.Integer"
			jdbcType="INTEGER" />
		<result property="customerId" column="customer_id" javaType="java.lang.Integer"
			jdbcType="INTEGER" />
	</resultMap>

	<insert id="insert" useGeneratedKeys="true" keyProperty="id"
		parameterType="com.gopher.system.model.CustomerUser">
		INSERT INTO customer_user
		(user_id,customer_id)
		VALUES
		(#{userId},#{customerId})
	</insert>

	<select id="findOne" parameterType="com.gopher.system.model.CustomerUser"
		resultMap="customerUserMap">
		SELECT * FROM customer_user
		<where>
			id = #{id}
		</where>
	</select>

	<select id="findList" parameterType="com.gopher.system.model.CustomerUser"
		resultMap="customerUserMap">
		SELECT * FROM customer_user
		<where>
			<if test="userId > 0">
				user_id = #{userId}
			</if>
			<if test="customerId > 0">
				customer_id = #{customerId}
			</if>
		</where>
	</select>



</mapper>